#Find the thirteen adjacent digits in the 1000-digit number that have the greatest product. What is the value of this product?


$num = 
$modnum = $num
$digits = 13
$length = 0
$product = 0
$skip = 0
while $modnum > 0
  $modnum = $modnum/10;
  $length +=1
  
end
while $product == 0 && $skip < $length
  	$product = 1
  	for $i in (1+$skip)..($digits+$skip)
	  $product *= ($num % 10**($i)-$num % 10**($i-1))/10**($i-1)
    end
  $skip += 1
  $maxproduct = $product
end

$i = $digits+$skip

while $i <= $length
  if ($num % 10**($i)-$num % 10**($i-1))/10**($i-1) == 0#if the $ith term = zero, we need to skip forward to find the first nonzero product. If we multiply by 0, we destroy the information stored in $product saving this information saves the program from remultiplying the same 12 numbers over and over
    $product = 0
    while $product == 0 && $i < $length#incriments i until there is a nonzero product
      $product = 1
      $j = $i
      
      while $j < $i+$digits && $product != 0
        $product *= ($num % 10**($j)-$num % 10**($j-1))/10**($j-1)
        $j += 1
      end
      
      if $product > $maxproduct
        $maxproduct = $product
      end
      
      $i += 1
    end
    $i = $j
    

  else#we have already verified that all numbers from $i-$digits to $i are nonzero.
    $product *= ($num % 10**($i)-$num % 10**($i-1))/10**($i-1)
    $product = $product / (($num % 10**($i-$digits)-$num % 10**($i-$digits-1))/10**($i-$digits-1))
    
    if $product > $maxproduct
      $maxproduct = $product
    end
    
    $i += 1
  end
  
end

puts("The maximum product of #$digits consecutive numbers in the given number is #$maxproduct")
